doctype html
html
	head
		title Matcha | #{title}
		include header_items.pug
		link(rel='stylesheet', href='/login.css')
		link(rel='stylesheet', href='sweetalert2.css')
	body
		include navbar.pug

		.container.mx-auto
			h1.text-center.mt-white.mt-5.display-3 Welcome Back!
			.row
				.col
					.card.my-5.mx-auto(style='max-width:500px')
						.card-body
							block content
								h1 Login
								hr
								form#login.needs-validation(name="login", action='', method='POST' novalidate)
									.form-group
										label(for='userName') Username:
										input#userLogin.form-control(type='text' placeholder='Enter Username' name='userLogin' required)
										.valid-feedback Valid.
										.invalid-feedback Please fill out this field.

									.form-group
										label(for='password') Password:
										input#userPass.form-control(type='password' placeholder='Enter Password' name='userPass' required)
										.valid-feedback Valid.
										.invalid-feedback Please fill out this field.
									
									p.text-right
										| New User? 
										a(href='/user/register') Register.
									p.text-right
										| Forgot Password? 
										a(href='/forgot') Reset.

									button#submit.btn.btn-success.btn-block.btn-lg.enableOnInput(type='submit', value='add') Login
									//- input#submit.btn.btn-success.btn-block.btn-lg.enableOnInput(type='button', value='Login', onclick='LogInCheck()', style="background-color:#28a745", disabled='disabled')
								//- p#error.mt-3
		
		include footer.pug

			//- SCRIPTS

		include js_includes.pug
