doctype html
html
	head
		title Matcha | #{title}
		include header_items.pug
		link(rel='stylesheet', href='/login.css')
		link(rel='stylesheet', href='/sweetalert2.css')
	body
		include navbar.pug

		.container.mx-auto
			h1.text-center.mt-white.mt-5.display-3 Welcome!
			.row
				.col
					.card.my-5.mx-auto(style='max-width:500px')
						.card-body
							block content
								h1 Login
								hr
								form#login.needs-validation(name="login", action='', method='POST' novalidate)
									.form-group
										label(for='userName') Username:
										input#userLogin.form-control(type='text' placeholder='Enter Username' name='userLogin' required autofocus)

									.form-group
										label(for='password') Password:
										input#userPass.form-control(type='password' placeholder='Enter Password' name='userPass' required)
									
									p.text-right
										| New User? 
										a(href='/user/register') Register.
									p.text-right
										| Forgot Password? 
										a(href='/user/pass_reset') Reset.

									button#submit.btn.btn-success.btn-block.btn-lg.enableOnInput(type='button', value='Login', onclick='postLogin()', disabled='disabled') Login
								//- p#error.mt-3
		
		include footer.pug

			//- SCRIPTS

		include js_includes.pug
		script(src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.all.min.js")
		//- script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")

		script(src="/login.js")
		
		if error === 'postRegistration'
			script.
				swal(
					'Welcome!',
					'Please confirm email and then login. :)',
					'success'
				)

