		link(rel='stylesheet', href='/account.css')
		link(rel='stylesheet', href='/location.css')
	body
		include navbar.pug

		.container.text-center
			h1.mt-white.text-center.mt-5.display-3 Edit Profile

		.container
			.container.mx-auto.my-3(style='max-width: 1500px;')
				.card.mx-auto(style='max-width: 1500px;')
					#carouselControls.carousel.slide(data-ride='carousel', data-interval="false")
						ol.carousel-indicators
							li.active(data-target='#carouselIndicators', data-slide-to='0')
							li(data-target='#carouselIndicators', data-slide-to='1')
							li(data-target='#carouselIndicators', data-slide-to='2')
						.carousel-inner
							.carousel-item.active(data-interval="false")
								img.img-fluidd-block.w-100(src='/images.jpeg', alt='...')
							.carousel-item(data-interval="false")
								img.d-block.w-100(src='/images2.jpeg', alt='...')
							.carousel-item(data-interval="false")
								img.d-block.w-100(src='/images3.jpg', alt='...')
						a.carousel-control-prev(href='#carouselControls', role='button', data-slide='prev')
							span.carousel-control-prev-icon(aria-hidden='true')
							span.sr-only Previous
						a.carousel-control-next(href='#carouselControls', role='button', data-slide='next')
							span.carousel-control-next-icon(aria-hidden='true')
							span.sr-only Next 
					a#UpdateImg.btn.btn-success.btn-block.btn-lg(href='/user/images') Change Image(s)
		
					.card-body
						h4.card-title Public Details
						hr
						form#account(name="account", action='', method='POST' novalidate)
							.form-group
								label(for='name') Name
								input#userName(type='text' placeholder='First Name' name='userName' value= userName)
								p#firstNameError
								input#userSurname(type='text' placeholder='Last Name' name='userSurname' value=userSurname)
								p#surnameError

							h4.card-subtitle.mb-2.text-muted 69
							//- input#userGender(type='text' placeholder='gender' name='userGender')

							.form-group
								label(for='gender') Gender
								select#userGender.custom-select(name='gender' value=userGender)
									option(value='male') Male
									option(value='female') Female
									option(value='other') Other
									option(value='attackheli') Attack Helicopter 
							
							.form-group
								label(for='orientation') Sexual Orientation
								//- input#userSexPref(type='text' placeholder='sexualPreference' name='userSexPref')
								select#userSexPref.custom-select(name='sexPref')
									option(value='bi') Bisexual
									option(value='hetero') Heterosexual
									option(value='homo') Homosexual
							hr
							h4.card-title Bio
							textarea#userBio(placeholder='Biography' name='userBio' form="account" rows='3' value=userBio)
							hr
							h4.card-title Location
							input#pac-input(type='text' placeholder='Enter a location')
							#map
							//- #infowindow-content
								img#place-icon(src='' width='16' height='16')
								span#place-name.title
								br
								span#place-address

							button#UpdateAcc.btn.btn-success.btn-block.btn-lg(type='submit', value='account') Update Profile

			.container.mx-auto.my-3(style='max-width: 1500px;')
				.card.mx-auto(style='max-width: 1500px;')
					.card-body
						h4.card-title Interests
						hr
						form#interests(name="interests", action='', method='POST' novalidate)
							input#userInterests(type='text' placeholder='Interests' name='userInterests')
							button#UpdateInterest.btn.btn-success.btn-block.btn-lg(type='submit', value='interests') Update Interests
						p#interestError

			.container.mx-auto.my-3(style='max-width: 1500px;')
				.card.mx-auto(style='max-width: 1500px;')
					.card-body
						h4.card-title Personal Details
						hr
						form#details(name='details', action='', method='POST' novalidate)
							label(for='userlogin') Username
							input#userLogin(type='text' placeholder='Username' name='userLogin')

							label(for='email') Email
							input#userEmail(type='email' placeholder='Email' name='userEmail')
							hr
							label(for='oldpass') Current Password
							input#userPass(type='password' placeholder='Current Password' name='userPass')

							label(for='pass') New Password
							input#userNewPass(type='password' placeholder='New Password' name='userNewPass')

							label(for='confpass') Confirm New Password
							input#userConfNew(type='password' placeholder='Confirm New Password' name='userNewConf')

							button#UpdateDetails.btn.btn-success.btn-block.btn-lg(type='submit', value='details') Update Details


				

