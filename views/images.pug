html
	head
		title Matcha | #{title}
		include header_items.pug
		link(rel='stylesheet', href='/recommendations.css')
	body
		include navbar.pug
		
		h2.mt-white.text-center.mt-5 Edit Images
		.container(style='max-width: 700px;')
			.card
				.col
					.container.mx-auto.my-5.custom-file(style='max-width: 700px;')
						form#account(name="images", action='/user/account/images', method='POST', enctype="multipart/form-data")
							//- .row.mx-auto(style='max-height: 180px;')
								//- .col-8
								//- 	.row.mx-auto
							//- input#profileImg.custom-file(type='file', name='image')
							input#profileImg.custom-file-input(type="file", name='image')
							label.custom-file-label.mx-auto(for='profileImg') Choose File
							button#submit.btn.btn-success.w-100.mx-auto(type='submit') Upload
					each value in imageArray
						hr
						.container.mx-auto.my-3(style='max-width: 700px;')
							//- .row.mx-auto(style='max-height: 180px;')
								//- .col
									//- .card.bg-dark.text-black.mx-auto.mb-5(style='max-width: 150px; max-height: 150px;')
							img.img-fluid.w-100.mx-auto(src=value, alt='...')
								//- .col-8
									//- .row.mx-auto
										input#profileImg(type='file', name='image', style='width: 250px; height: 40px;')
									.row.mx-auto(style='max-height: 42px;')
							button.btn.btn-lg.btn-success.mt-2.mx-2(value=value, onclick='setActiveImage(this.value)') Set as Active
							button.btn.btn-lg.btn-danger.mt-2.mx-2(value=value, onclick='deleteImage(this.value)')
								i.fa.fa-trash

		script(src="/images.js")
		include footer.pug
		include js_includes.pug
		script.
			// Add the following code if you want the name of the file appear on select
			$(".custom-file-input").on("change", function() {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
			});
