doctype html

html
	head
		include header_items.pug
	body
		.container
			br
			.jumbotron
				h1.display-4 Send Message
				br
				input#name.form-control(placeholder='Name')
				br
				textarea#message.form-control(placeholder='Your Message Here')
				br
				button#send.btn.btn-success Send
			#messages
		include js_includes.pug
		script.
			$(() => {
				$("#send").click(()=>{
				sendMessage({
					name: $("#name").val(), 
					message:$("#message").val()});
					})
				getMessages()
			});

			function addMessages(message){
				$("#messages").append(`
					<h4> ${message.name} </h4>
					<p>  ${message.message} </p>`)
			}

			function getMessages(){
				$.get('/messages', (data) => {
					data.forEach(addMessages);
				})
			}

			function sendMessage(message){
				$.post('/messages', message)
			}