doctype html
html
	head
		title Matcha | #{title}
		include header_items.pug
		link(rel='stylesheet', href='/pass_reset.css')
		link(rel='stylesheet', href='/sweetalert2.css')
	body
		include navbar.pug

		.container.mx-auto
			//- h1.mt-white.text-center.mt-5.display-3#heading An Elephant Never Forgets

			.card.my-5.mx-auto(style='max-width:500px')
				.card-body
					block content
						h1 Reset Password
						hr
						form#userPassReset(name="resetPW",action='', method='POST', onsubmit='return false')
							.form-group
								label(for='password') New Password:
								input#userPassword.form-control(type='text' placeholder='Enter new password' name='userPassword')
								p#passError.errorMsg

							button#submit.btn.btn-success.btn-block.btn-lg(type='button', value=code onclick='resetPass(this.value)' disabled='true') Reset
						p#error.mt-3

		include footer.pug

			//- SCRIPTS
		include js_includes.pug
		script(src="/pw.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.all.min.js")