nav.navbar.navbar-expand-lg.navbar-light.mbg-white.sticky-top
	a.navbar-brand(href='/')
		img#Logo.d-inline-block.align-top(src='/logo.png', alt='Logo', width='35', height='30')
		|     Matcha
	button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarMain', aria-controls='navbarMain', aria-expanded='false', aria-label='Toggle navigation')
		span.navbar-toggler-icon
	#navbarMain.collapse.navbar-collapse
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			li.nav-item
				a.nav-link(href='/') Home

			if !userLogged
				li#LoginBtn.nav-item
					a.nav-link(href='/user/login') Login
				li#RegisterBtn.nav-item
					a.nav-link(href='/user/register') Register
			if userLogged
				li#Recomm.nav-item
				a.nav-link(href='/recommendations') Recommendations
			if userLogged
				li#Chat.nav-item
				a.nav-link(href='/chat') Chat
				
		if userLogged
			ul.navbar-nav.ml-auto.mt-2.mt-lg-0.nav-flex-auto
				li.nav-item.dropdown
					a#NotificationDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
						span#Notif.badge.badge-pill.badge-danger.mx-2
						i.fa.fa-bell
						| 
					.dropdown-menu(aria-labelledby='NotificationDropdown')
						a.dropdown-item(href='/notifications/likes') 
							i.fa.fa-heart
							|  Likes 
							span#NotifL.badge.badge-danger
						a.dropdown-item(href='/chat') 
							i.fa.fa-comments
							|  Messages 
							span#NotifM.badge.badge-danger
						a.dropdown-item(href='/notifications/views') 
							i.fa.fa-eye
							|  Profile Views 
							span#NotifV.badge.badge-danger
				//- li.nav-item
				//- 	a.nav-link(href='/search') 
				//- 		i.fa.fa-search
				//- 		| 
				li.nav-item.dropdown
					a#usernameDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
						| #{user} 
						i.fa.fa-user
					.dropdown-menu.dropdown-menu-right(aria-labelledby='usernameDropdown')
						a#Prof.dropdown-item(href='/user/profile')
							i.fa.fa-user-circle(aria-hidden='true')
							|  My Profile 
						a#Acc.dropdown-item(href='/user/account')
							i.fa.fa-cog(aria-hidden='true')
							|  Edit Profile 
						a#Img.dropdown-item(href='/user/images')
							i.fa.fa-picture-o(aria-hidden='true')
							|  Edit Images
						.dropdown-divider
						a#LogoutBtn.dropdown-item(onclick='logout()', onmouseover="", style="cursor: pointer;")
							i.fa.fa-sign-out
							|  Logout 

script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
script(src="/notifications.js")