		img#Logo.d-inline-block.align-top(src='/logo.png', alt='', width='35', height='30')
		|     Matcha
	button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarMain', aria-controls='navbarMain', aria-expanded='false', aria-label='Toggle navigation')
		span.navbar-toggler-icon
	#navbarMain.collapse.navbar-collapse
		ul.navbar-nav.mr-auto.mt-2.mt-lg-0
			li.nav-item
				a.nav-link(href='/') Home
					//- | Home 
					//- span.sr-only (current)
			if !userLogged
				li#LoginBtn.nav-item
					a.nav-link(href='/user/login') Login
				li#RegisterBtn.nav-item
					a.nav-link(href='/user/register') Register
			if userLogged
				li#Recomm.nav-item
				a.nav-link(href='/recommendations') Recommendations
			//- li.nav-item
			//-     a.nav-link(href='#') MESSAGES
			//- li.nav-item
			//-     a.nav-link.disabled(href='#', tabindex='-1', aria-disabled='true') Disabled
