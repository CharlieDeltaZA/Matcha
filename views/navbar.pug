		//-     input.form-control.mr-sm-2(type='search', placeholder='Search')
		//-     button.btn.btn-light.my-2.my-sm-0(type='submit') Search
		if userLogged
			ul.navbar-nav.ml-auto.mt-2.mt-lg-0.nav-flex-auto
				li.nav-item.dropdown
					a#NotificationDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
						span#Notif.badge.badge-pill.badge-danger.mx-2
						i.fa.fa-bell
						| 
					.dropdown-menu(aria-labelledby='NotificationDropdown')
						a.dropdown-item(href='/notifications/likes') 
							i.fa.fa-heart
							|  Likes 
							span#NotifL.badge.badge-danger
						a.dropdown-item(href='/chat') 
							i.fa.fa-comments
							|  Messages 
							span#NotifM.badge.badge-danger
						a.dropdown-item(href='/notifications/views') 
							i.fa.fa-eye
							|  Profile Views 
							span#NotifV.badge.badge-danger
				li.nav-item
					a.nav-link(href='/search') 
						i.fa.fa-search
						| 
				li.nav-item.dropdown
					a#usernameDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
						| #{user} 
						i.fa.fa-user
					.dropdown-menu.dropdown-menu-right(aria-labelledby='usernameDropdown')
						a#Prof.dropdown-item(href='/user/profile')
							i.fa.fa-user-circle(aria-hidden='true')
							|  My Profile 
						a#Acc.dropdown-item(href='/user/account')
							i.fa.fa-cog(aria-hidden='true')
							|  Edit Profile 
						.dropdown-divider
						a#LogoutBtn.dropdown-item(onclick='logout()', onmouseover="", style="cursor: pointer;")
							i.fa.fa-sign-out
							|  Logout 


